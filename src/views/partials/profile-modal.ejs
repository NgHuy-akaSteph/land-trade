<div class="modal" id="profile-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Hồ sơ cá nhân</h2>
            <button class="modal-close" onclick="window.closeProfileModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="modal-body">
            <!-- Avatar Section -->
            <div class="profile-avatar" style="display:flex;flex-direction:column;align-items:center;margin-bottom:16px;">
                <img id="profile-avatar-img" src="/img/default-avatar.png" alt="Avatar" style="width:96px;height:96px;border-radius:50%;object-fit:cover;border:2px solid #3b82f6;margin-bottom:8px;">
                <label for="avatar-upload" style="cursor:pointer;color:#3b82f6;font-size:14px;">
                    <i class="fa fa-camera"></i> Đổi ảnh đại diện
                </label>
                <input type="file" id="avatar-upload" accept="image/*" style="display:none">
            </div>

            <!-- Form Section -->
            <form id="profile-form" class="auth-form">
                <div class="form-group">
                    <label for="profile-fullname">Họ và tên</label>
                    <input type="text" id="profile-fullname" name="fullName" disabled>
                </div>
                <div class="form-group">
                    <label for="profile-email">Email</label>
                    <input type="email" id="profile-email" name="email" disabled>
                </div>
                <div class="form-group">
                    <label for="profile-phone">Số điện thoại</label>
                    <input type="text" id="profile-phone" name="phone" disabled>
                </div>
                <div class="form-group">
                    <button type="button" id="profile-edit-btn" class="btn btn-secondary btn-block">
                        <i class="fa fa-edit"></i> Chỉnh sửa
                    </button>
                    <button type="submit" id="profile-save-btn" class="btn btn-primary btn-block" style="display:none;">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="module" src="/js/ui/profile-modal.js"></script>